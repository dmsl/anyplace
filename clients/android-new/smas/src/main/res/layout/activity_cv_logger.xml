<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/gmapsGrayColor"
  tools:context=".android.ui.cv.gnk.logger.CvLoggerActivityRM"
  >
  <!-- NOTE: Modifying the order of the elements in this file might cause crashes.
  EVEN with IDE auto-refactoring.

  There is a numbering for this order.
  -->

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <!-- 1. CAMERA VIEW: pv_camera -->
    <androidx.camera.view.PreviewView
        android:id="@+id/pv_camera"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:scaleType="fitStart"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >
      <!-- INFO: this is required, even though it has no children.
      If this tag was closed directly (e.g., using />), then
      the code in [CvActivity?] would crash
      -->

    </androidx.camera.view.PreviewView>



    <!-- 2. OVERLAY: DETECTED OBJECTS -->
    <cy.ac.ucy.cs.anyplace.lib.android.cv.tensorflow.legacy.gnk.utils.visualization.TrackingOverlayView
        android:id="@+id/tov_camera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintDimensionRatio="4:6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- 3. GOOGLE MAPS
            It is hidden when Camera View and Detections Overlay are visible.
     -->



    <!-- 4.2 OVERLAY: WARNING
            An empty [View] that quickly flashes yellow/red to bring attention
            using [StatusUpdater]
    -->


    <!-- 5. OVERLAY: WARNING BACKGROUND
            Solid background behind the [StatusUpdater]'s [tv_statusTitle] and [tv_statusSubtitle]
     -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- 6. Settings Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_settings"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:elevation="50dp"

        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_settings_dark"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--app:outlineColor="@color/white_B0"-->
    <!--app:outlineWidth="1dp" -->


    <!-- 7. StatusUpdater -->
    <!-- 7.1. StatusUpdater: TITLE -->
    <TextView
        android:id="@+id/tv_msgTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:elevation="40dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"

        android:translationY="2dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="false"
        tools:text="Msg Title"
        tools:visibility="visible" />


    <!-- 7.2. StatusUpdater: SUBTITLE -->
    <TextView
        android:id="@+id/tv_msgSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationY="-2dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_msgTitle"
        app:textAllCaps="false"
        tools:text="This is the msg subtitle"
        tools:visibility="visible" />

    <!-- 7.3. StatusUpdater: BG -->
    <View
        android:id="@+id/view_statusBackground"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:alpha="0.8"
        android:background="@color/yellowDark"
        android:elevation="39dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"

        tools:alpha="0.8" />


    <!-- 7.4 STATUS: sticky status message
    e.g. entering a particular mode
    -->
    <cy.ac.ucy.cs.anyplace.lib.android.utils.ui.OutlineTextView
        android:id="@+id/tv_statusSticky"
        android:layout_width="390dp"
        android:layout_height="26dp"
        android:elevation="100dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"

        android:translationY="2dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:outlineColor="@color/white_B0"
        app:outlineWidth="0.5dp"
        app:textAllCaps="false"
        tools:text="demo-Status"
        tools:visibility="visible" />


    <!-- 8 StatusUpdater: WARNING OVERLAY -->


<!--    START OF FLOOR SELECTOR-->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_floorSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:visibility="visible"
        app:constraint_referenced_ids="button_floorUp,button_floorDown,button_selectedFloor,textView_titleFloor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_floorUp"
        android:background="@drawable/button_round_top"
        app:icon="@drawable/ic_arrow_up_disabled"
        app:layout_constraintBottom_toTopOf="@+id/button_selectedFloor"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/MaterialButtonIcon"

        android:translationY="20dp"
        android:text=""
        app:cornerRadius="50dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="38dp"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_floorDown"
        style="@style/MaterialButtonIcon"
        android:text=""
        android:rotation="180"
        app:icon="@drawable/arrow_up"
        android:background="@drawable/button_round_top"
        app:cornerRadius="50dp"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="38dp"

        android:layout_marginTop="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button_selectedFloor"
        style="@style/MaterialButtonIcon"
        android:layout_width="48dp"
        android:layout_height="22dp"
        android:translationY="10dp"
        android:elevation="42dp"
        android:fontFamily="sans-serif-black"
        tools:text="5"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_floorDown"
        />

    <cy.ac.ucy.cs.anyplace.lib.android.utils.ui.OutlineTextView
        android:id="@+id/textView_titleFloor"
        app:layout_constraintStart_toStartOf="@id/button_floorDown"
        app:layout_constraintEnd_toEndOf="@id/button_floorDown"
        app:layout_constraintTop_toBottomOf="@id/button_floorDown"

        android:elevation="40dp"
        android:fontFamily="sans-serif-black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="-5dp"

        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        app:outlineColor="@color/white"
        android:text="floor"
        app:outlineWidth="0.5dp"
        />
    <!--    END OF FLOOR SELECTOR-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_demoNavigation"
        style="@style/MaterialButtonIcon"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/darkGray"
        android:text=""
        app:cornerRadius="50dp"
        app:icon="@drawable/ic_location_found"
        app:iconGravity="textStart"

        app:iconPadding="0dp"
        app:iconSize="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_floorDown"
        app:layout_constraintVertical_bias="0.42000002" />


  </androidx.constraintlayout.widget.ConstraintLayout>


  <View
      android:id="@+id/view_warning"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:alpha="0"
      android:background="@color/yellowDark"
      android:elevation="40dp"
      android:visibility="invisible"
      app:layout_anchor="@+id/constraintLayout"
      app:layout_anchorGravity="center"

      tools:visibility="gone" />

  <include
      android:id="@+id/bottom_ui"
      layout="@layout/bottom_sheet_cv_logging"
      android:elevation="0dp"
      app:behavior_peekHeight="5dp"
      tools:visibility="gone" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
